{% extends "layout/box/base.twig" %}

{% block contentarea_class %}news{% endblock %}

{% block content %}
<ul>
{% for item in items %}
    <li>
        <a title="{{ item.title }}" href="{{ item.link }}"><span class="datetime">{{ item.datepublish|date("d-m") }}</span>{{ item.title }}</a>
    </li>
{% endfor %}
</ul>
{% endblock %}