{
    "name": "richardhinkamp/richardhinkamp-blog-website",
    "description": "Website blog.richardhinkamp.nl, personal weblog.",
    "autoload": {
        "psr-0": {"RH": "./"}
    },

    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/bolt/krumo"
        },
        {
            "type": "vcs",
            "url": "https://github.com/richardhinkamp/kcfinder"
        }
    ],

    "require": {
        "bolt/krumo": "dev-master",
        "erusev/parsedown": "dev-master",
        "hautelook/phpass": "dev-master",
        "garetjax/phpbrowscap": "dev-master",
        "bolt/bolt": "1.4.*",
        "richardhinkamp/kcfinder": "dev-master",
        "jlong/sass-twitter-bootstrap": "2.3.*"
    },
    "require-dev": {
    },
    "minimum-stability": "stable",
    "scripts": {
        "post-install-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets",
            "KCFinder\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets",
            "KCFinder\\Composer\\ScriptHandler::installAssets"
        ]
    },
    "extra": {
        "bolt-web-dir": "web",
        "bolt-dir-mode": "0755",
        "kcfinder-web-dir": "web",
        "kcfinder-assets-install": "relative",
        "kcfinder-dir-mode": "0755"
    }
}
