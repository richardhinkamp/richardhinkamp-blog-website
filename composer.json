{
    "name": "richardhinkamp/website",
    "description": "Website richard.hinkamp.nl, part R&D, part personal site.",
    "autoload": {
        "psr-0": {"RH": "./"}
    },

    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/richardhinkamp/bolt"
        },
        {
            "type": "vcs",
            "url": "https://github.com/jlong/sass-twitter-bootstrap"
        }
    ],

    "require": {
        "bobdenotter/bolt": "dev-paths",
        "twitter/bootstrap": "2.2.*"
    },
    "require-dev": {
    },
    "minimum-stability": "dev",
    "scripts": {
        "post-install-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets"
        ]
    },
    "extra": {
        "bolt-web-dir": "web",
        "bolt-dir-mode": "0755"
    }
}
