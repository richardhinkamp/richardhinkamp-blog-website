{
    "name": "richardhinkamp/website",
    "description": "Website richard.hinkamp.nl, part R&D, part personal site.",
    "autoload": {
        "psr-0": {"RH": "./"}
    },

    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/bolt/bolt"
        },
        {
            "type": "vcs",
            "url": "https://github.com/richardhinkamp/kcfinder"
        },
        {
            "type": "vcs",
            "url": "https://github.com/jlong/sass-twitter-bootstrap"
        }
    ],

    "require": {
        "silex/silex": "1.0.*@dev",
        "htmlawed/htmlawed": "dev-master",
        "hautelook/phpass": "dev-master",
        "bolt/bolt": "dev-master",
        "richardhinkamp/kcfinder": "dev-master",
        "twitter/bootstrap": "2.2.*"
    },
    "require-dev": {
    },
    "minimum-stability": "dev",
    "scripts": {
        "post-install-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets",
            "KCFinder\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets",
            "KCFinder\\Composer\\ScriptHandler::installAssets"
        ]
    },
    "extra": {
        "bolt-web-dir": "web",
        "bolt-dir-mode": "0755",
        "kcfinder-web-dir": "web",
        "kcfinder-assets-install": "relative",
        "kcfinder-dir-mode": "0755"
    }
}
